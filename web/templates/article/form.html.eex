<%= form_for @changeset, @action, fn f -> %>
  <div class="form-group">
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  </div>
  <div class="form-group">
    <%= label f, :text %>
    <%= text_input f, :text %>
    <%= error_tag f, :text %>
  </div>
  <%= submit "Submit", class: "btn btn-primary" %>
<% end %>
